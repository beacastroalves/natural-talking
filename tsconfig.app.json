{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Mantive relaxado como o Readdy enviou, mas corrigi o caminho */
    "strict": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src", 
    "vite-env.d.ts", 
    "auto-imports.d.ts" // <--- ADICIONE ESTA LINHA AQUI
  ]
}